<Window x:Class="Learndb.windows.WindowGender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Learndb.windows"
        mc:Ignorable="d"
        Title="Гендер" Height="250" Width="400">
    <Grid>
        <StackPanel Width="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label>Код</Label>
            <TextBox Height="30" Text="{Binding Code}"></TextBox>
            <Label>Наименование</Label>
            <TextBox Height="30" Text="{Binding Name}"></TextBox>
            <Button Content="Сохранить" Click="bt_SaveClick" Margin="0, 10"/>
        </StackPanel>
    </Grid>
</Window>
