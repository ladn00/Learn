<Page x:Class="Learndb.pages.Menu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Learndb.pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Меню" >

    <Grid Style="{StaticResource DopBackground}">
        <StackPanel Width="250" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="ButtKl" Margin="0,0,0,10" Height="50" Click="clButtKl">Клиенты</Button>
            <Button Height="50" Margin="0,0,0,10" Click="clbtnGender">Гендер</Button>
            <Button Height="50" Margin="0,0,0,10" Click="clbtnServClient">Покупки</Button>
            <Button Height="50" Margin="0,0,0,10" Click="clbtnService">Курсы</Button>
        </StackPanel>
    </Grid>
</Page>
